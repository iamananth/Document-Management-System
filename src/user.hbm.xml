<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">  
  
 <hibernate-mapping>  
  <class name="com.pojo.User" table="users">  
    <id name="id">  
     <generator class="assigned"></generator>  
    </id>  
            
    <property name="username"></property>  
    <property name="password"></property>
    <property name="department"></property>
    <property name="phone_number"></property>
    
    <set name="projectdetails" table="project_details" fetch="select">
			<key>
				<column name="user_id" not-null="true"></column>
			</key>
			<one-to-many class="com.pojo.ProjectDetails"/>
		</set>
            
  </class>  
            
 </hibernate-mapping>  